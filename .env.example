# ==============================================
# Environment Variables Example
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env or .env.local to version control!

# ==============================================
# SENSITIVE - KEEP PRIVATE
# ==============================================

# Private key of the relayer wallet (for gasless transactions)
# Must hold MATIC for gas fees
RELAYER_PRIVATE_KEY=your_private_key_here

# Polygon RPC URL (Alchemy, Infura, or other provider)
POLYGON_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Leave empty to use deployer address as fallback
TRUSTED_FORWARDER=
TREASURY_ADDRESS=
DAO_ADDRESS=

# ==============================================
# SMART CONTRACT ADDRESSES (Polygon Amoy Testnet)
# ==============================================
# These are public and can be committed

NEXT_PUBLIC_PINN44_TOKEN_ADDRESS=
NEXT_PUBLIC_MERKLE_DISTRIBUTOR_ADDRESS=
NEXT_PUBLIC_STAKING_VESTING_ADDRESS=
NEXT_PUBLIC_WORK_SUBMISSION_ADDRESS=
NEXT_PUBLIC_CONTRIBUTOR_VAULT_ADDRESS=
NEXT_PUBLIC_GOVERNANCE_MODULE_ADDRESS=
NEXT_PUBLIC_BUYBACK_BURN_ADDRESS=
NEXT_PUBLIC_LIQUIDITY_MANAGER_ADDRESS=
NEXT_PUBLIC_GASLESS_MODULE_ADDRESS=

# ==============================================
# AIRDROP CONFIGURATION
# ==============================================

# Amount of tokens to airdrop per claim
AIRDROP_AMOUNT=100

# Token decimals (most ERC20 tokens use 18)
TOKEN_DECIMALS=18

# Path to the merkle tree JSON file (for API)
MERKLE_TREE_PATH=data/merkle-tree.json

# ==============================================
# IPFS CONFIGURATION
# ==============================================

# NFT.storage API Key (for file uploads to IPFS)
# Get your free API key at https://nft.storage
NFT_STORAGE_API_KEY=your_nft_storage_api_key_here

